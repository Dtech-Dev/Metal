<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/app_bar"
            android:layout_alignParentTop="true"
            android:id="@+id/barInputCust"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textCustID"
            android:layout_below="@+id/barInputCust"
            android:hint="@string/label_id_pel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textCustName"
            android:layout_alignEnd="@+id/textCustName" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/textCustName"
            android:layout_below="@+id/textCustID"
            android:hint="@string/label_nama_pelanggan"
            android:layout_alignRight="@+id/btnSaveInputCust"
            android:layout_alignEnd="@+id/btnSaveInputCust"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/textCustAddress"
            android:layout_below="@+id/textCustName"
            android:hint="@string/label_alamat"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/btnSaveInputCust" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textJenisPelanggaran"
            android:layout_below="@+id/textCustAddress"
            android:hint="@string/label_jenis_pelanggaran"
            android:layout_alignRight="@+id/btnSaveInputCust"
            android:layout_alignEnd="@+id/btnSaveInputCust"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:id="@+id/btnUploadImg"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignRight="@+id/btnSaveInputCust"
            android:layout_alignEnd="@+id/btnSaveInputCust" />-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:id="@+id/btnSaveInputCust"
            android:layout_marginRight="42dp"
            android:layout_marginEnd="42dp"
            android:layout_below="@+id/spinnerTarif"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="44dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/no_image_large"
            android:layout_below="@+id/spinnerTarif"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/btnUploadImg"
            android:layout_toStartOf="@+id/btnUploadImg" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerTarif"
            android:layout_below="@+id/textJenisPelanggaran"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tLong"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/btnSaveInputCust"
            android:layout_alignEnd="@+id/btnSaveInputCust"
            android:layout_marginBottom="65dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tLat"
            android:layout_above="@+id/tLong"
            android:layout_alignRight="@+id/tLong"
            android:layout_alignEnd="@+id/tLong" />

        <!-- <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Ambil Image"
             android:id="@+id/btnTakeImg"
             android:layout_below="@+id/btnUploadImg"
             android:layout_toRightOf="@+id/imageView"
             android:layout_alignRight="@+id/btnUploadImg"
             android:layout_alignEnd="@+id/btnUploadImg" />-->

    </RelativeLayout>
