<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:id="@+id/cv1"
        card_view:cardCornerRadius="4dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/mlistIcon"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="25dp"
                android:padding="8dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mlistCode"

                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical"
                android:text="Text For Customer Code"

                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/mlistIcon"
                android:layout_toRightOf="@+id/mlistIcon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mlistName"
                android:text="Text For Customer Name"
                android:layout_below="@+id/mlistCode"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/mlistCode"
                android:layout_alignStart="@+id/mlistCode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mlistaddress"
                android:text="Text For Customer Address"
                android:layout_below="@+id/mlistName"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/mlistCode"
                android:layout_alignStart="@+id/mlistCode" />

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="@color/colorSecondaryText"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>